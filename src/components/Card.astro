---
// components/Card.astro
const { href, target = "_self", title } = Astro.props;
---

<a
	href={href}
	target={target}
	class="not-prose group flex items-start gap-2 rounded-lg border p-4 transition hover:bg-gray-100 dark:hover:bg-white/5"
>
	<span class="dark:text-opacity-70 text-gray-600 dark:text-white">
		<slot name="icon" />
	</span>
	<div class="flex flex-col">
		<div class="leading-[1.7] font-medium underline decoration-dashed underline-offset-2 group-hover:decoration-solid">{title}</div>
		<div class="text-sm opacity-75">
			<slot />
		</div>
	</div>
</a>
