---
import "../styles/global.css";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import LanguagePrompt from "../components/LanguagePrompt.tsx";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" />
		<slot name="head" />

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100..900&family=TikTok+Sans:opsz,wght@12..36,300..900&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="overflow-x-hidden">
		<slot />
		<LanguagePrompt currentUrl={Astro.url.href} client:only="react" />
		<script type="module" src="https://unpkg.com/@splinetool/viewer@1.0.18/build/spline-viewer.js"></script>
		<script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=GTM-M7WLQNGR"></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			window.gtag = function gtag() {
				dataLayer.push(arguments);
			};
			gtag("js", new Date());

			gtag("config", "GTM-M7WLQNGR");
		</script>
	</body>
</html>
