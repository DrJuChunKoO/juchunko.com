---
import { type CollectionEntry, getCollection } from "astro:content";
import SharedContentTemplate from "@/components/SharedContentTemplate.astro";
export async function getStaticPaths() {
	const acts = await getCollection("act");
	return acts
		.map((act) => {
			const slugWithLang = act.id.replace(/\.(md|mdx)$/, "");
			const [lang, ...slugParts] = slugWithLang.split("/");
			const slug = slugParts.at(-1);
			if (!slug) return;

			return {
				params: { lang, slug },
				props: act,
			};
		})
		.filter(Boolean);
}
type Props = CollectionEntry<"act">;
const post = Astro.props;
---

<SharedContentTemplate post={post} categoryKey="acts" />
